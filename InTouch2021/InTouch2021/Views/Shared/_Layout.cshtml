<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InTouch2021</title>
    <link rel="stylesheet" href="~/mdl/material.min.css" type="text/css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>

    <div class="demo-layout-transparent mdl-layout mdl-js-layout">
        <header class="mdl-layout__header mdl-layout__header--transparent">
            <div class="mdl-layout__header-row">
                <!-- Title -->
                <span class="our-title mdl-layout-title">Menu</span>
                <!-- Add spacer, to align navigation to the right -->
                <div class="mdl-layout-spacer"></div>
                <!-- Navigation -->
                <nav class="mdl-navigation">
                    <a class="nav-link nav-own-link" asp-area="" asp-controller="Home" asp-action="Index">Основная информация</a>
                    <a class="nav-link nav-own-link" asp-area="" asp-controller="Home" asp-action="Privacy">Онлайн-Опрос</a>
                    <a class="nav-own-link nav-link" href="">Метаданные</a>
                    <a class="nav-own-link nav-link" asp-area="" asp-controller="Home" asp-action="feedBack">Обратная связь</a>
                </nav>
            </div>
        </header>
        <div class="our-title mdl-layout__drawer">
            <span class="mdl-layout-title">Title</span>
            <nav class="mdl-navigation">
                <a class="mdl-navigation__link" asp-area="" asp-controller="Home" asp-action="Index">Основная информация</a>
                <a class="mdl-navigation__link" asp-area="" asp-controller="Home" asp-action="Privacy">Онлайн-Опрос</a>
                <a class="mdl-navigation__link" href="">Метаданные</a>
                <a class="mdl-navigation__link" href="">Обратная связь</a>
            </nav>
        </div>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
        @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - InTouch2021 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
        

        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script src="~/mdl/material.min.js" type="text/javascript"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/Chart.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
