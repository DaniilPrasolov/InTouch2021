
@{
    ViewData["Title"] = "feedBack";
}

<h1 class="display-3 text-center m-5">Обратная связь</h1>

<form method="post" asp-action="Create">
    <div class="demo-card-square-feed card-own-general mdl-card mdl-shadow--2dp container d-flex flex-column justify-content-around">
        <div class="row w-75">
            <div class="col">
                <input class="mdl-textfield__input m-2" type="text" id="sample1" placeholder="Ваше имя">
                @*<label class="mdl-textfield__label" for="sample1">Ваше имя</label>*@
            </div>
           
        </div>
        <div class="row w-75">
            <div class="col">
                <input placeholder="Номер телефона" class="mdl-textfield__input m-2" type="text" pattern="\+7\s?[\(]{0,1}9[0-9]{2}[\)]{0,1}\s?\d{3}[-]{0,1}\d{2}[-]{0,1}\d{2}" id="sample2">
                @*<label class="mdl-textfield__label" for="sample2">Ваш номер телефона</label>*@
            </div>
            <span class="mdl-textfield__error">Некорректный ввод</span>

        </div>
        <div class="row w-75">
            <div class="col">
                <input placeholder="email" class="mdl-textfield__input m-2" type="email" id="email" pattern="[a-z0-9._%+-]+\@@[a-z0-9.-]+\.[a-z]{2, 4}$">
                @*<label class="mdl-textfield__label" for="email">Электронная почта</label>*@
                <span class="mdl-textfield__error">Некорректный ввод</span>
            </div>
            
        </div>
        <div class="row w-75">
            <div class="col">
                <textarea placeholder="Оставьте сообщение" class="mdl-textfield__input m-2" type="text" rows="3" id="message_box"></textarea>
                @*<label class="mdl-textfield__label" for="message_box">Оставьте ваше сообщение</label>*@
            </div>
           
        </div>

        <div class="row w-75">
            <div class="col-12">
                <h6 class="m-3">Категория вопроса</h6>
            </div>
            
            <div class="col-3 m-3">
                <input type="radio" id="bulg" name="radio-group" checked>
                <label for="bulg">Бухгалтерия</label>
            </div>
            <div class="col-3 m-3">
                <input type="radio" id="kanc" name="radio-group">
                <label for="kanc">канцелярский отдел</label>
            </div>
            <div class="col-3 m-3">
                <input type="radio" id="study" name="radio-group">
                <label for="study">Учебный отдел</label>
            </div>
            <div class="col-3 m-3">
                <input type="radio" id="rect" name="radio-group" checked>
                <label for="rect">Ректорат</label>
            </div>
        </div>

        <div class="row">
            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
                Отправить
            </button>
        </div>
     
    </div>
</form>

